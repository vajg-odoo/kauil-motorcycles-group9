<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_discount">
            <field name="name">sale.order.form.inherit.discount</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="after">
                    <field name="is_new_customer" invisible="1"/>
                    <button name="apply_motorcycle_discount" type="object" string="Apply Discount" attrs="{'invisible': [('is_new_customer', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>